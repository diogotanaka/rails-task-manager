<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <div>
    <%# codigo solucao usando fonts awesome %>
    <% if task.completed? %>
    <i class="fa-regular fa-square-check"></i>
    <% else %>
      <i class="fa-regular fa-square"></i>
    <% end %>

    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
  <% end %>
</ul>
<%= link_to "Add a task", new_task_path, class: "btn btn-primary btn-sm" %>
